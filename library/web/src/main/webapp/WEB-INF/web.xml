<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">

    <servlet>
        <servlet-name>bookServlet</servlet-name>
        <servlet-class>web.BooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookServlet</servlet-name>
        <url-pattern>/bookServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>web.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/userServlet</url-pattern>
    </servlet-mapping>

    <!--angular-->
    <servlet>
        <servlet-name>bookServletAngular</servlet-name>
        <servlet-class>web.BooksServletAngular</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookServletAngular</servlet-name>
        <url-pattern>/bookServletAngular</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getUsersAngular</servlet-name>
        <servlet-class>web.GetUsersServletAngular</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getUsersAngular</servlet-name>
        <url-pattern>/getUsersAngular</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getRentedBooksAngular</servlet-name>
        <servlet-class>web.GetRentedBooksServletAngular</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getRentedBooksAngular</servlet-name>
        <url-pattern>/getRentedBooksAngular</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>returnBookAngular</servlet-name>
        <servlet-class>web.ReturnBookServletAngular</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>returnBookAngular</servlet-name>
        <url-pattern>/returnBookAngular</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>borrowBookAngular</servlet-name>
        <servlet-class>web.BorrowBookServletAngular</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>borrowBookAngular</servlet-name>
        <url-pattern>/borrowBookAngular</url-pattern>
    </servlet-mapping>

</web-app>